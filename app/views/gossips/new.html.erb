<html>
  <body>
    <!-- ... -->

    <% if @gossip.errors.any? %>
      <div class="alert alert-danger" role="alert">
      <p> Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>

    <% if @gossip.save %>
      <div class="alert alert-success" role="alert">
      <p> Success!</p>
        </div>
        <% end %>


<div class="container mt-5 form-group">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre du potin' %>
      <%= text_field_tag 'title', @gossip.title , class:"form-control"%>
      <br /> <br />

      <%= label_tag 'Mon potin à raconter' %>
      <%= text_area_tag 'content', @gossip.content,class:"form-control" %>
      <br /> <br />

     <button type="submit" class="btn btn-success"> <%="Raconter mon potin" %> </button>

  </div>

    <% end %>


    <!-- ... -->
  </body>
</html>
